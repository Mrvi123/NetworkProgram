<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Giải phương trình bậc nhất ax + b = 0" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="155*"/>
        </Grid.RowDefinitions>
        <Label Content="GIẢI PHƯƠNG TRÌNH BẬC NHẤT AX + B = 0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,10,0,0"/>

        <Label Content="Nhập A" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,50,0,0"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,50,0,0"/>

        <Label Content="Nhập B" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,11,0,0" Grid.Row="1"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,11,0,0" Grid.Row="1"/>

        <Label Content="Nghiệm phương trình" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,51,0,0" Grid.Row="1"/>
        <TextBox x:Name="txtKQ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="180,51,0,0" IsReadOnly="True" Grid.Row="1"/>

        <Button Content="Giải" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,91,0,0" Width="75" Click="Giai_Click" Grid.Row="1"/>
        <Button Content="Xóa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,91,0,0" Width="75" Click="Xoa_Click" Grid.Row="1"/>
        <Button Content="Thoát" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,91,0,0" Width="75" Click="Thoat_Click" Grid.Row="1"/>
    </Grid>
</Window>
