<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="166*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="153*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="329*"/>
            <ColumnDefinition Width="240*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Giải phương trình bậc nhất ax + b = 0" FontSize="18" Margin="60,7,187,21" Grid.ColumnSpan="4" />

        <TextBlock Text="Nhập A" Margin="8,1,47,58" FontSize="20" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <TextBox Name="txtA" Margin="108,3,25,11" Grid.ColumnSpan="3" Grid.Row="1" />

        <TextBlock Text="Nhập B" Margin="8,8,44,103" FontSize="20" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <TextBox Name="txtB" Margin="108,10,22,15" Grid.ColumnSpan="3" Grid.Row="2" />

        <Button Name="btnGiai" Content="Giải" Margin="125,22,102,94" Click="btnGiai_Click" Grid.Column="2" Grid.Row="4" />
        <Button Name="btnXoa" Content="Xóa" Margin="114,19,19,97" Click="btnXoa_Click" Grid.ColumnSpan="2" Grid.Row="4" />
        <Button Name ="btnThoat" Content="Thoát" Click="btnThoat_Click" Margin="20,20,120,96" Grid.Column="3" Grid.Row="4"/>

        <TextBlock Text="Nghiệm phương trình" Margin="13,27,9,15" Grid.Row="3" FontSize="16" Grid.ColumnSpan="2" />
        <TextBox Name="txtNghiem" Margin="1,22,32,51" Grid.Column="2" Grid.Row="3" />
    </Grid>
</Window>
